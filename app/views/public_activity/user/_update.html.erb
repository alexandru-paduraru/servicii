    <% vector = ["Accounts", "Financials", "Collections"] %>
   <% time = Time.now - activity.created_at %>
   <% if activity.owner && activity.trackable %>
 	<div class="row">
  			<div class="span1 img"><img class="img-rounded" src="https://si0.twimg.com/profile_images/3278714349/d509129a501a9c3c3686e0addaa10220_normal.jpeg" />
		    </div>
       <% if params[:page] == 'admin' %>
           <div class="span5">
        <% end %>
        <% if params[:page] == 'customer' || params[:page] == 'invoice' %>
            <div class="span4">
        <% end %>
    		<strong><a class="muted" href="#"> <%= activity.owner.first_name + ' ' + activity.owner.last_name %></a></strong> &nbsp;
    		<a class="muted" href="#">
            <% if activity.owner.job == User::ADMIN %>
            #admin
            <% else %>  
        		<% jobs = activity.owner.worksons %>
        		<% jobs.each do |job|%>
        		#<%= vector[job.job_id-2] %>
        		<% end %>
    		<% end %>

            </a>
    		<small class="pull-right muted">
<!--         		adding revert to actions only for admin -->
            <% if current_user.job == User::ADMIN %>
                <%= link_to revert_version_path(:id => activity.trackable.versions.last, :activity_id => activity.id), :method => :post do %>
                    <span class="label"><i class="icon-undo"></i></span>
                <% end %>
            <% end %>
            &nbsp
            <% if  (time/1.day).to_i > 0 %>
    		    <%= (time/1.day).to_i %>d
            <% else %>
                <% if (time/1.hour).to_i > 0%>
                 <%= (time/1.hour).to_i %>h
                 <% else %>
                    <%= (time/1.minute).to_i%>m
                <% end %>
            <% end %>
    		</small> 
    		<p>Updated <a class="muted" href="#">#user</a>
    	    <%= link_to user_edit_path(activity.trackable.id), :class => "muted" do %>
    		<u><%= ' ' + activity.trackable.first_name + ' ' +activity.trackable.last_name %></u> 
    		<% end %>
    		's
<% if a = activity.trackable.versions.last %>
    <% previous_version = a.reify %>
<!--     		         first_name change -->
                <% if previous_version.first_name != activity.trackable.first_name %>        
                first name from <%= previous_version.first_name %> to <%= activity.trackable.first_name %>
                <% end %>
<!--                     last_name change -->
                <% if previous_version.last_name != activity.trackable.last_name %>        
                last name from <%= previous_version.last_name %> to <%= activity.trackable.last_name %>
                <% end %>
<!--                     email change -->
                <% if previous_version.email != activity.trackable.email %>        
                email from <%= previous_version.email %> to <%= activity.trackable.email %>
                <% end %>
<!--                    job change-->
                <% if previous_version.salesman != activity.trackable.salesman || previous_version.accountant != activity.trackable.accountant || previous_version.colector != activity.trackable.collector %>
                job from
                     <% if previous_version.salesman == true %><a class="muted" href="#">#accounts</a>
                     <% end %>
                     <% if previous_version.accountant == true %><a class="muted" href="#">#financials</a>
                     <% end %>
                     <% if previous_version.collector == true %><a class="muted">#collections</a>
                     <% end %>
                 to
                     <% if activity.trackable.salesman == true %><a class="muted" href="#">#accounts</a>
                     <% end %>
                     <% if activity.trackable.accountant == true %><a class="muted" href="#">#financials</a>
                     <% end %>
                     <% if activity.trackable.collector == true %><a class="muted">#collections</a>
                     <% end %>
                <% end %>                
<% end %> <!-- end if there is a previous version -->
    		<%= activity.created_at.strftime("on %m/%d/%Y") %> </p>				
    		</div>
    		<% if params[:page] == 'admin'%>
                <div class="span6"> <legend></legend></div>  
            <% end %>
            <% if params[:page] == 'customer' || params[:page] == 'invoice'%>
                <div class="span5"> <legend></legend></div> 
            <% end %> 
   </div>
		
   <% end %>