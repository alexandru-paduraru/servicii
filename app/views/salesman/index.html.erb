<div class="clearfix"></div>
<div class="table-div">
    <table class="table table-hover table-striped" id="customers-table">
      <tr>
    	  <th>#</th>
    	  <th>First name</th>
    	  <th>Last name </th>
    	  <th>Email</th>
    	  <th>Account</th>
    	  <th>Open invoices</th>
    	  <th>Actions</th>
      </tr>
      <% index = 0 %>
      <% @customer_detail.each do |details| %>
    	  <tr data-link="<%= customer_details_path(details[:customer].id)%>">
    	  <td><%= index = index + 1 %> </td>
    	  <td><%= details[:customer].first_name %></td>
    	  <td><%= details[:customer].last_name %></td>
    	  <td><%= details[:customer].email %></td>
    	  <td>
    		  <% if details[:customer].account %>
    		  <%= details[:customer].account%>
    		  <% end %>
    	  </td>
    	  <td><%= details[:open_invoices] %></td>
    	  <td> <%= link_to customer_details_path(details[:customer].id) do %>
    	  			 <span class="label label-info"><i class="icon-eye-open"></i> Details</span>
    	  	   <% end %>
    	  	   <%= link_to customer_delete_path(details[:customer].id) do %>
    	  			 <span class="label label-important">Archive</span>
    	  	   <% end %>
    	  	   
    	  </td>
    	  </tr>
      <% end %>
    </table>
</div>
