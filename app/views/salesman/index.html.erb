<table class="table plain_table">
<tr><td>
  <div class="input-append">
    
    <%= form_tag salesman_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search], :class => "span5", :placeholder => "Search a customer by first name" %>
           
    <%= button_tag(type: 'submit', class: "btn") do %>
   		 <i class="icon-ml-search"></i> Search</button>
    <% end %> 
    <% end %>
    
  </div>
  </td>
  <td>
   	<button class="modalButton btn btn-success pull-right" type="button" id="1"><i class="icon-ml-add"></i> Add customer</button>
  </td>
</tr>

</table>
<table class="table table-bordered table-hover table-striped">
  
  <tr>
  <th>#</th>
  <th>First name</th>
  <th>Last name </th>
  <th>Account number</th>
  <th>Open invoices</th>
  <th class="span1">Actions</th>
  </tr>
  <% index = 0 %>
  <% @customer_detail.each do |details| %>
  <tr>
  <td><%= index = index + 1 %> </td>
  <td><%= details[:customer].first_name %></td>
  <td><%= details[:customer].last_name %></td>
  <td><%= details[:customer].id %></td>
  <td><%= details[:open_invoices] %></td>
  <td> <%= link_to customer_details_path(details[:customer].id) do %>
  			 <span class="label label-info"><i class="icon-ml-eye"></i> Details</span
  	   <% end %>
  </td>
  </tr>
  <% end %>
  
</table>

</div>
<div class="clearfix">
</div>


<div class="modal hide fade" id="modal1">
<div class="form-horizontal">
  <%= form_for :customer, url: 'customer_create', :class => "form-horizontal" do |f|%>

  <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4>Add customer</h4>
          
           <div class="control-group">
	          <%= f.label :first_name, :class => "control-label" %>
	          <div class="controls">
		          <%= f.text_field :first_name, :class => "input-xlarge", :placeholder => "First Name" %>
		      </div>
		  </div>
          
          <div class="control-group">
	          <%= f.label :last_name, :class => "control-label" %>
	          <div class="controls">
		          <%= f.text_field :last_name, :class => "input-xlarge", :placeholder => "Last Name" %>
		      </div>
		  </div>
          
           <div class="control-group">
	          <%= f.label :phone, :class => "control-label" %>
	          <div class="controls">
		          <%= f.text_field :phone, :class => "input-xlarge", :placeholder => "Phone" %>
		      </div>
		  </div>
          
           <div class="control-group">
	          <%= f.label :email, :class => "control-label" %>
	          <div class="controls">
		          <%= f.text_field :email, :class => "input-xlarge", :placeholder => "Email" %>
		      </div>
		  </div>
          
          <div class="control-group">
	          <%= f.label :billing_address, :class => "control-label" %>
	          <div class="controls">
		          <%= f.text_field :billing_address, :class => "input-xlarge", :placeholder => "Billing address" %>
		      </div>
		  </div>

  </div>
  
  <div class="modal-footer">
      <button type="button" class="btn btn-danger span2 pull-left" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <%= submit_tag("Add", :class => "btn btn-info span2 pull-right") %>
     <!--  <button type="button" class="btn btn-info span2 pull-right" data-dismiss="modal" aria-hidden="true">Add</button>
      -->
  </div>
  
  <% end %>  <!-- #form end -->
</div>

