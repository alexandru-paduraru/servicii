  <div class="input-append">
    <%= form_tag salesman_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search], :class => "span9", :placeholder => "Search a customer by first name, last name, account number, email or invoice number" %>
           
    <%= button_tag(type: 'submit', class: "btn") do %>
   		 <i class="icon-search"></i> Search</button>
    <% end %> 
    <% end %>
  </div>
   	<%= link_to customer_new_path, :class => "btn btn-success pull-right" do %>
   		<i class="icon-plus-sign"></i> Add customer
   	<% end %>
   	
<table class="table table-hover table-striped">
  <tr>
	  <th>#</th>
	  <th>First name</th>
	  <th>Last name </th>
	  <th>Email</th>
	  <th>Account</th>
	  <th>Open invoices</th>
	  <th>Actions</th>
  </tr>
  <% index = 0 %>
  <% @customer_detail.each do |details| %>
	  <tr data-link="<%= customer_details_path(details[:customer].id)%>">
	  <td><%= index = index + 1 %> </td>
	  <td><%= details[:customer].first_name %></td>
	  <td><%= details[:customer].last_name %></td>
	  <td><%= details[:customer].email %></td>
	  <td>
		  <% if details[:customer].account %>
		  <%= details[:customer].account%>
		  <% end %>
	  </td>
	  <td><%= details[:open_invoices] %></td>
	  <td> <%= link_to customer_details_path(details[:customer].id) do %>
	  			 <span class="label label-info"><i class="icon-eye-open"></i> Details</span>
	  	   <% end %>
	  	   <%= link_to customer_delete_path(details[:customer].id) do %>
	  			 <span class="label label-important">Delete</span>
	  	   <% end %>
	  	   
	  </td>
	  </tr>
  <% end %>
</table>

