
<div class="span5 well">


<%= form_for :user, url: 'employee_create', html: {class: "form-horizontal"} do |f| %>
<fieldset>
<legend>Create employee account</legend>  

<div class="control-group">
	<%= f.label :first_name, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :first_name, :class => "input-xlarge", :placeholder => "First Name" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :last_name, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :last_name, :class => "input-xlarge", :placeholder => "Last Name" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :email, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :email, :class => "input-xlarge", :placeholder => "Email" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :password, :class => "control-label" %>
	<div class="controls">
		<%= f.password_field :password, :class => "input-xlarge", :placeholder => "Password" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :password_confirmation, :class => "control-label" %>
	<div class="controls">
		<%= f.password_field :password_confirmation, :class => "input-xlarge", :placeholder => "Password Confirmation" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :available_jobs, :class => "control-label"%>
	<div class="controls">
	<%= f.check_box :salesman %><label class="checkbox inline" for="user_salesman"><span></span>Salesman</label><br>
	<%= f.check_box :accountant %><label class="checkbox inline" for="user_accountant"><span></span>Accountant</label><br> 
	<%= f.check_box :collector %> <label class="checkbox inline" for="user_collector"><span></span>Collector</label>
	</div>
</div>
  
    <%= submit_tag("Create account", :class => "btn btn-info pull-right")%>
    <a href="/admin" class="btn btn-danger">Cancel</a>
  <% end %>

<!-- Text input-->
</fieldset>
</form>
</div>