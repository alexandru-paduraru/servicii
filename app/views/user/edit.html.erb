<div class="span6 well">

<%= form_for @user, url: '/employee/' + params[:id], html: {class: "form-horizontal"} do |f| %>
<fieldset>
<legend>Edit account</legend>  
<% if @user.errors.any? %>
	<div class="alert alert-error">
	<h4>Errors:</h4>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
	</div>
<% end %>
<div class="control-group">
	<%= f.label :first_name, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :first_name, :placeholder => "First Name" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :last_name, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :last_name, :placeholder => "Last Name" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :email, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :email, :placeholder => "Email" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :password, :class => "control-label" %>
	<div class="controls">
		<%= f.password_field :password, :placeholder => "Password" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :password_confirmation, :class => "control-label" %>
	<div class="controls">
		<%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %>
	</div>
</div>
<% if @user.job == 0 %>
<div class="control-group">
	<%= f.label :available_jobs, :class => "control-label" %>
	<div class="controls">
	<%= f.fields_for :workson do |f| %>
		<%= f.check_box :salesman %><label class="checkbox inline" for="user_workson_salesman"><span></span>Salesman</label><br>
		<%= f.check_box :accountant %><label class="checkbox inline" for="user_workson_accountant"><span></span>Accountant</label><br> 
		<%= f.check_box :collector %> <label class="checkbox inline" for="user_workson_collector"><span></span>Collector</label>
	<% end %>
	</div>
</div>
<% end %>
    <%= submit_tag("Save changes", :class => "btn btn-info pull-right")%>
    <a href="/admin" class="btn btn-danger">Cancel</a>
  <% end %>

<!-- Text input-->
</fieldset>
</form>
</div>