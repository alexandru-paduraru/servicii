<div class="span6 well">

<%= form_for @customer, url: '/customer_create', html: {class: "form-horizontal"} do |f| %>
<fieldset>
<legend>Create customer account</legend>  
<% if @customer.errors.any? %>
	<div class="alert alert-error">
	<h4>Errors:</h4>
	<ul>
		<% @customer.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
	</div>
<% end %>
<div class="control-group">
	<%= f.label :first_name, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :first_name, :placeholder => "First Name" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :last_name, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :last_name, :placeholder => "Last Name" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :email, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :email, :placeholder => "Email" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :phone, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :phone, :placeholder => "Phone" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :billing_address, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :billing_address, :placeholder => "Billing address" %>
	</div>
</div>

  
    <%= submit_tag("Create account", :class => "btn btn-info pull-right")%>
    <a href="/customer_new" class="btn btn-danger">Cancel</a>
  <% end %>

<!-- Text input-->
</fieldset>
</form>
</div>