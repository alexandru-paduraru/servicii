
  <div class="input-append">
    <%= form_tag collector_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search], :class => "span9", :placeholder => "Search a customer by first name, last name, account number or invoice number" %>    
    <%= button_tag(type: 'submit', class: "btn") do %>
   		 <i class="icon-ml-search"></i> Search</button>
    <% end %> 
    <% end %>
  </div>
   
<table class="table table-bordered table-hover table-striped">
  
  <tr>
  <th>#</th>
  <th>First name</th>
  <th>Last name </th>
  <th>Account</th>
  <th>Open invoices</th>
  <th>Response</th>
  <th>Actions</th>
  </tr>
  
  <% index = 0 %>
  <% @customer_details.each do |customer_details| %>
  <tr>
  <td><%= index = index + 1 %> </td>
  <td><%= customer_details[:customer].first_name %></td>
  <td><%= customer_details[:customer].last_name %></td>
  <td><%= customer_details[:customer].account %></>
  <td>
	  <% if customer_details[:open_invoices]%>
	      <% customer_details[:open_invoices].each do |open_invoice| %>
	      <li> # <%= open_invoice.number %> issued <%= open_invoice.date %>
	      </li>
	      <% end %>
	  <% end %>
  </td>
  <td> </td>
  <td> <a href="customer_details/<%= customer_details[:customer].id %>" class = "btn" >Details</a></td>
  </tr>
  <% end %>
 
</table>

</div>
<div class="clearfix">
</div>


