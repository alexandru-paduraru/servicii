	<td><%= user_details[:id] %></td>
	<td><%= user_details[:first_name] %></td>
	<td><%= user_details[:last_name] %></td>
	<td><%= user_details[:email] %></td>
	<td>
		<ul>
		<% user_details[:job].each do |job|%>
		<li>
			<%= vector[job[:job_id]-2] %>
		</li>
		<% end %>
		</ul>
	</td>
	<td><a href="#">Edit</a></td>
</tr>
<% end %>
<% else %>
	<p>No employees in database</p>
<% end %>
