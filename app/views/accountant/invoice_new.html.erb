
<div class="span5 well">

<%= form_for @invoice, url: '/invoice_create', html: {class: "form-horizontal"} do |f| %>
<fieldset>
<legend>Create invoice </legend>  
<% if @invoice.errors.any? %>
	<div class="alert alert-error">
	<h4>Errors:</h4>
	<ul>
		<% @invoice.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
	</div>
<% end %>


<div class="input-prepend control-group">
	<%= f.label :amount, :class => "control-label" %>
	<div class="controls">
	    <span class="add-on">$</span>
		<%= f.text_field :amount, :class => "input-xlarge amount", :placeholder => "Amount" %>
	</div>
</div>

<div class="control-group">
	<%= f.label :due_date, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :due_date, :class => "datepicker input-xlarge", :placeholder => "Due date" %>
	</div>
</div>

<div class="control-group">
	<%= f.label :customer_id, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :customer_id, :class => "input-xlarge", :placeholder => "Customer id" %>
	</div>
</div>


  
    <%= submit_tag("Create invoice", :class => "btn btn-info pull-right")%>
    <a href="/invoices/new" class="btn btn-danger">Cancel</a>
  <% end %>

<!-- Text input-->
</fieldset>
</form>
</div>


