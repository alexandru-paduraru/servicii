  
  <% if @invoice %>
       
   <div class="row">
        <div class="span9">
	        <legend class="muted">Invoice  #<%= @invoice.number %>
	        </legend>
	        <div class="span3 pull-right">
		        <address><strong>Issued on :</strong> <%= @invoice.date %><br>
		        		 <strong>Due on:</strong> <%= @invoice.due_date %><br>
		        </address>
	        </div>
	         <address>
	            <h4>Customer</h4> 
	            Organization: <strong><%= @customer.organization_name %></strong><br>
			    Name: <strong><%= @customer.first_name + ' ' + @customer.last_name %></strong><br>
			    Email: <strong><%= @customer.email %></strong><br>
			    Phone: <strong><%= @customer.phone %></strong>
			    </address>
			     
			    <address>
			    <strong>Address</strong><br>
			    <%= @customer.state %>
			    <%= @customer.city %>
			    <!-- <%= @customer.zip_code %> -->
			    <%= @customer.address1 %>
			    <% if @customer.address2 %>
			     <%= @customer.address2%>
			    <% end %>
			    </address>
		
		<table class="table table-striped table-hover">
		      <tr>
		      	<th>#</th>
		      	<th>Service</th>
		      	<th>Quantity</th>
		      	<th>Value</th>
		      	<th><span class="pull-right">Total</span></th>
		      </tr>
		      <% index = 0 %>
		      <% if @services %>
			      <% @services.each do |service| %>
			      <tr>
			      <td><%= index = index +1 %></td>
			      <td> <%= service[:name]%></td>
			      <td> <%= service[:qty].to_i %> </td>
			      <td> <%= '$' + service[:value].to_s + ',00'%></td>
			      <td><span class="pull-right"> $<%= service[:amount] %> </span>
			      </td>
			      </tr>
			      <% end %>
		      <% end %>
		      <tr>
		      	<td colspan="4"></td>
		      	<td>
		      		<span class="amount_info">Total:</span>
		      		<span class="total_due_amount">$<%= @invoice.amount %></span>
		      	</td>
		      </tr> 
	      </table>

	<div>
		<h4>Company</h4>
		<p><%= @company.name %></p>
		<p><%= @company.address %>, <%= @company.zip_code %></p>
		<p><%= @company.city + ', ' + @company.country %></p>
	</div>
</div>
        
      <div class="span3 pull-right actions">
      	 <legend class="muted">Account action</legend>	
      	 <div class="well">
      			Account standing: <strong>on time</strong><br>
      			Last contact: <strong>60 days ago</strong>
      		</div>
	      <a href="#" class="btn btn-success btn-large btn-block"><i class="icon-headphones icon-white"></i> Call</a>
	      <%= link_to send_email_path(@customer.id) , :class => "btn btn-info btn-large btn-block" do %>
	      		<i class="icon-envelope icon-white"></i> Send email
	      <% end %>
	      <a href="#" class="btn btn-warning btn-large btn-block"><i class="icon-comment icon-white"></i> Message</a>
	      <% if @customer.sent_to_collector%>
	      		<a href="#" class="btn btn-danger btn-large btn-block disabled"><i class="icon-exclamation-sign icon-white"></i> Sent to collector</a>
	      <% else %>
	      	<%= link_to send_to_collector_path(@customer.id) , :class => "btn btn-danger btn-large btn-block" do %>
	      		<i class="icon-exclamation-sign icon-white"></i> Send to collector
	      <% end %>
	<% end %>
     	<legend class="muted">Future Action</legend>
      </div>
     
  </div>
<!-- end row   -->




<div class="row">
	<div class="span6">
	<legend>Timeline</legend>
	<ul>
         <% @email_details.each do |email_detail| %>
         <li> 
           Email for invoice# <%= email_detail[:email].invoice_id %> was sent by <%= email_detail[:user].first_name %> &nbsp <%= email_detail[:user].last_name %>
	       <%= email_detail[:email].sent_at.strftime("on %m/%d/%Y") %>
	       <%= email_detail[:email].sent_at.strftime("at %I:%M%p") %>
	       <br>
	        <% if email_detail[:email].viewed_at %>
				 <%= email_detail[:email].viewed_at.strftime("and it was viewed on %m/%d/%Y") %>
				 <%= email_detail[:email].viewed_at.strftime("at %I:%M%p") %>
	        <% end %>
          </li>   
        <% end %>
 

	</ul>
	</div>
	
</div>
</div>
<% end %>
