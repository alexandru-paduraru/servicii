
<div class = "span12">

  <div class="input-append">
    
    <%= form_tag accountant_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search], :class => "span5" %>
    <%= submit_tag("Search", :class => "btn") %>   
    <% end %>
    
  </div>
  <label class = "strong">Download: </label>
  <button class="btn btn-info">Incasari</button>
  <button class="btn btn-info">Invoices</button>

<table class="table table-hover table-striped">
  
  <tr>
  <th>Invoice number</th>
  <th>Date</th>
  <th>Due date</th>
  <th>Amount</th>
  <th>Current balance</th>
  <th>Customer id </th>
  </tr>
  
  <% index = 0 %>
  <% @invoices.each do |invoice| %>
  	<% if invoice.current_balance < 0 %>
  		<tr onclick = "document.location = 'detalii';" class = "error">
	<% else %>
		<tr onclick = "document.location = 'detalii';" >
	<% end %>
  
  <% index = index + 1 %>
  <td><%= invoice.number %></td>
  <td><%= invoice.date %></td>
  <td><%= invoice.due_date %></td>
  <td><%= invoice.amount %> $ </td>
  <td><%= invoice.current_balance %></td>
  <td><%= invoice.customer_id %></td>
  </tr>
  <% end %>
  
</table>
</div>

</div>
<div class="clearfix">
</div>