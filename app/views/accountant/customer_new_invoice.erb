<legend>Create invoice </legend> 

<%= form_for @invoice, url: customer_create_invoice_path(@customer), html: {class: "form-horizontal"} do |f| %>

<div class ="row">
	<div class = "span6">
		<p><strong>Customer name:</strong> <%= @customer.first_name + ' ' + @customer.last_name %> </p>
		<p><strong>Adress:</strong> <%= @customer.address1 %></p>
		<div id="ajax_response">
		</div>
	</div>

<div class="span6">
<fieldset>
<div class="control-group">
	<%= f.label :due_date, :class => "control-label" %>
	<div class="controls">
		<%= f.text_field :due_date, :class => "datepicker", :placeholder => "Due date" %>
	</div>
</div>

<%= f.hidden_field :customer_id, :value => @customer.id %>
	<%= f.hidden_field :customer_email, :value => @customer.email %>
	<%= f.hidden_field :customer_name, :value => @customer.first_name + ' ' + @customer.last_name  %>
  

<!-- Text input-->
</fieldset>

</div>

<div class="span12">
<table class="table table-striped" id="services_table">
  <tr>
  <th>#</th>
  <th>Service</th>
  <th>Value</th>
  <th>Qty</th>
  <th>Actions</th>
  <th>Total</th>
  </tr>
  <tr>
  <%= f.fields_for :service do |f| %>
  			<td></td>
			<td><%= f.text_field :name, :class => "span2", :placeholder => "Service name" %>
			</td>
			<td>
			<%= f.number_field :value, :class => "span2", :placeholder => "0" %>
			</td>
			<td>
			<%= f.number_field :qty, :class => "span2", :placeholder => "0" %>
			</td>
			<td>
			<button class="btn btn-success" type="button" id="add_service_button"><i class="icon-plus icon-white"></i> Add</button>
			</td>
			<td>
				
			</td>
  <% end %>
  </tr>
 
  <tr>
	  <td colspan="5"></td>
	  <td>
	  	<strong>Total amount:</strong>
	  </td>
  </tr>
</table>

</div>
<button class="modalButton btn btn-info span2" id="1"> Preview </button>
  <div class="btn-group pull-right">
  <button type="submit" name="draft" class="btn span2">Save draft</button>
  <button type="submit" name = "send" class="btn btn-danger span2">Send normal</button>
  <button type="button" id="send_invoice" class="btn btn-primary span2">Send Ajax</button>
  </div>
  <% end %>
  </form>
</div>  